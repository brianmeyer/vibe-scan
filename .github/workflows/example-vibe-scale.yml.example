# Example workflow for running Vibe Scale on pull requests
# Copy this to your repository as .github/workflows/vibe-scale.yml
#
# Prerequisites:
# 1. Install the Vibe Scale GitHub App on your repository
# 2. The app handles all API keys - no secrets needed!

name: Vibe Scale

on:
  pull_request:
    types: [opened, synchronize, reopened]

permissions:
  contents: read
  pull-requests: read

jobs:
  vibe-scale:
    name: Production Risk Analysis
    runs-on: ubuntu-latest
    steps:
      - name: Run Vibe Scale
        uses: brianmeyer/vibe-scale@main
        with:
          # Optionally fail the workflow if high-severity issues are found
          fail-on-high: 'false'
