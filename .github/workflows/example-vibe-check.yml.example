# Example workflow for running Vibe Check on pull requests
# Copy this to your repository as .github/workflows/vibe-check.yml
#
# Prerequisites:
# 1. Install the Vibe Check GitHub App on your repository
# 2. The app handles all API keys - no secrets needed!

name: Vibe Check

on:
  pull_request:
    types: [opened, synchronize, reopened]

permissions:
  contents: read
  pull-requests: read

jobs:
  vibe-check:
    name: Production Risk Analysis
    runs-on: ubuntu-latest
    steps:
      - name: Run Vibe Check
        uses: brianmeyer/vibe-check@main
        with:
          # Optionally fail the workflow if high-severity issues are found
          fail-on-high: 'false'
